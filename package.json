{
  "name": "hare",
  "version": "2.0.0",
  "description": "Based on Vue.js 2.x, Koa 2.x, Element-UI and Nuxt.js",
  "author": "Clark Du",
  "private": true,
  "scripts": {
    "dev": "nodemon -w app.js -w nuxt.config.js --exec babel-node app.js",
    "build": "nuxt build && babel app.js --out-file app.prod.js",
    "start": "cross-env NODE_ENV=production node app.prod.js",
    "analyze": "nuxt build --analyze",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "test": "ava"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "dependencies": {
    "axios": "^0.15.3",
    "cross-env": "^3.2.4",
    "element-ui": "^1.2.7",
    "koa": "^2.0.0",
    "normalize.css": "^5.0.0",
    "nuxt": "latest"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-cli": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-plugin-component": "^0.9.1",
    "babel-preset-es2015": "^6.24.0",
    "eslint": "^3.18.0",
    "eslint-config-standard": "^7.1.0",
    "eslint-plugin-html": "^2.0.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.1.1",
    "jsdom": "^9.12.0",
    "nodemon": "^1.11.0",
    "webpack-dashboard": "^0.3.0"
  }
}
