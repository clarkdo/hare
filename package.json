{
  "name": "hare",
  "version": "2.0.0",
  "description": "Based on Vue.js 2.x, Koa 2.x, Element-UI and Nuxt.js",
  "author": "Clark Du",
  "private": true,
  "scripts": {
    "dev": "cross-env DEBUG=nuxt:*,app nodemon -w server -w nuxt.config.js --exec babel-node server/app.js",
    "dev:pm2": "pm2 start yarn --name=hare -- dev",
    "test": "npm run lint && npm run build:client && ava --verbose --serial ",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "build": "npm run build:client && npm run build:server",
    "build:client": "nuxt build",
    "build:server": "webpack --config server/webpack.config.babel.js",
    "start": "cross-env NODE_ENV=production node .nuxt/dist/server-app.*.js",
    "start:pm2": "pm2 start yarn --name=hare -- start",
    "analyze": "nuxt build --analyze",
    "generate": "nuxt generate",
    "precommit": "lint-staged"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "lint-staged": {
    "{client,server,test}/**/*.{js,vue}": [
      "eslint --ext .js,.vue --ignore-path .gitignore"
    ]
  },
  "dependencies": {
    "axios": "^0.16.2",
    "bunyan": "^1.8.10",
    "chart.js": "^2.6.0",
    "cross-env": "^5.0.1",
    "element-ui": "^1.4.1",
    "es6-promise": "^4.1.1",
    "js-cookie": "^2.1.4",
    "js-yaml": "^3.9.1",
    "jwt-decode": "^2.2.0",
    "koa": "^2.3.0",
    "koa-body": "^2.3.0",
    "koa-bunyan": "^1.0.0",
    "koa-bunyan-logger": "^2.0.0",
    "koa-compose": "^4.0.0",
    "koa-compress": "^2.0.0",
    "koa-connect": "^2.0.0",
    "koa-proxies": "^0.5.1",
    "koa-router": "^7.2.1",
    "koa-session": "^5.4.0",
    "lodash": "^4.17.4",
    "mkdirp": "^0.5.1",
    "moment": "^2.18.1",
    "negotiator": "^0.6.1",
    "normalize.css": "^7.0.0",
    "nuxt": "^1.0.0-rc3",
    "svg-captcha": "^1.3.9",
    "vue-chartjs": "^2.7.2",
    "vue-class-component": "^5.0.1",
    "vue-i18n": "^7.0.5",
    "vuex-class": "^0.2.0",
    "xmlify": "^1.1.0"
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.0",
    "babel-plugin-component": "^0.10.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.0",
    "eslint": "^4.3.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-html": "^3.1.1",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "jsdom": "^11.0.0",
    "lint-staged": "^4.0.2",
    "moxios": "^0.4.0",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "progress-bar-webpack-plugin": "^1.10.0",
    "sass-loader": "^6.0.6",
    "webpack": "^3.4.1",
    "webpack-node-externals": "^1.6.0"
  },
  "engines": {
    "node": ">=7.6.0"
  }
}
