{
  "name": "hare",
  "version": "0.4.0",
  "description": "Based on Vue.js 2.x, Koa 2.x, Element-UI and Nuxt.js",
  "author": "Clark Du",
  "license": "MIT",
  "main": "dist/server-app.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clarkdo/hare.git"
  },
  "scripts": {
    "dev": "cross-env DEBUG=nuxt:*,app nodemon -w server -w nuxt.config.js server/app.js",
    "dev:pm2": "pm2 start yarn --name=hare -- dev",
    "test": "yarn lint && yarn build:client && ava --verbose --serial ",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "build": "yarn build:client && yarn build:server",
    "build:client": "nuxt build",
    "build:server": "rimraf dist/server && cpx '{nuxt.config.js,server/**}' dist",
    "start": "cross-env NODE_ENV=production node dist/server/app.js",
    "start:pm2": "pm2 start yarn --name=hare -- start",
    "analyze": "nuxt build --analyze",
    "generate": "nuxt generate",
    "precommit": "lint-staged",
    "heroku-postbuild": "yarn build",
    "prepublishOnly": "yarn lint && yarn test && yarn build:server",
    "release": "standard-version"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "lint-staged": {
    "{client,server,test}/**/*.{js,vue}": [
      "eslint --ext .js,.vue --ignore-path .gitignore"
    ]
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bunyan": "^1.8.12",
    "chart.js": "^2.7.2",
    "element-ui": "^2.3.2",
    "js-cookie": "^2.2.0",
    "js-yaml": "^3.11.0",
    "jwt-decode": "^2.2.0",
    "koa": "^2.5.0",
    "koa-body": "^2.3.0",
    "koa-bunyan": "^1.0.1",
    "koa-bunyan-logger": "^2.0.0",
    "koa-compose": "^4.0.0",
    "koa-compress": "^2.0.0",
    "koa-connect": "^2.0.1",
    "koa-proxies": "^0.6.2",
    "koa-router": "^7.4.0",
    "koa-session": "^5.8.1",
    "mkdirp": "^0.5.1",
    "moment": "^2.22.0",
    "negotiator": "^0.6.1",
    "normalize.css": "^8.0.0",
    "nuxt": "^1.4.0",
    "svg-captcha": "^1.3.11",
    "vue-chartjs": "^3.3.1",
    "vue-class-component": "^6.2.0",
    "vue-clipboards": "^1.2.4",
    "vue-i18n": "^7.6.0",
    "vuex-class": "^0.3.0",
    "xmlify": "^1.1.0"
  },
  "devDependencies": {
    "@nuxtjs/webpackmonitor": "^0.1.0",
    "ava": "^0.25.0",
    "babel-eslint": "^8.2.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "cpx": "^1.5.0",
    "cross-env": "^5.1.4",
    "eslint": "^4.19.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-html": "^4.0.2",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.2",
    "moxios": "^0.4.0",
    "node-sass": "^4.8.3",
    "nodemon": "^1.17.3",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.7",
    "standard-version": "4.3.0"
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0"
  }
}
