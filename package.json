{
  "name": "hare",
  "version": "2.0.0",
  "description": "Based on Vue.js 2.x, Koa 2.x, Element-UI and Nuxt.js",
  "author": "Clark Du",
  "private": true,
  "scripts": {
    "dev": "DEBUG=nuxt:*,app nodemon -w server/app.js -w nuxt.config.js --exec babel-node server/app.js",
    "build": "nuxt build && babel server --out-dir dist",
    "start": "cross-env NODE_ENV=production node dist/app.js",
    "analyze": "nuxt build --analyze",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "test": "ava"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "dependencies": {
    "axios": "^0.15.3",
    "bunyan": "^1.8.10",
    "cross-env": "^3.2.4",
    "element-ui": "^1.2.7",
    "js-yaml": "^3.8.3",
    "jsonwebtoken": "^7.3.0",
    "koa": "^2.0.0",
    "koa-body": "^1.6.0",
    "koa-bunyan": "^1.0.0",
    "koa-compose": "^3.2.1",
    "koa-compress": "^2.0.0",
    "koa-session": "^4.0.0",
    "normalize.css": "^5.0.0",
    "nuxt": "latest",
    "theaterjs": "^3.1.0",
    "xmlify": "^1.1.0"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-cli": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-plugin-component": "^0.9.1",
    "babel-preset-es2015": "^6.24.0",
    "eslint": "^3.18.0",
    "eslint-config-standard": "^7.1.0",
    "eslint-plugin-html": "^2.0.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.1.1",
    "jsdom": "^9.12.0",
    "node-sass": "^4.5.2",
    "nodemon": "^1.11.0",
    "sass-loader": "^6.0.3",
    "webpack-dashboard": "^0.3.0"
  },
  "engines": {
    "node": ">=6.0.0"
  }
}
