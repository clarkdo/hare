{
  "name": "hare",
  "version": "0.2.3",
  "description": "Based on Vue.js 2.x, Koa 2.x, Element-UI and Nuxt.js",
  "author": "Clark Du",
  "license": "MIT",
  "main": "dist/server-app.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clarkdo/hare.git"
  },
  "scripts": {
    "dev": "cross-env DEBUG=nuxt:*,app nodemon -w server -w nuxt.config.js --exec babel-node server/app.js",
    "dev:pm2": "pm2 start yarn --name=hare -- dev",
    "test": "yarn lint && yarn build:client && ava --verbose --serial ",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "build": "yarn build:client && yarn build:server",
    "build:client": "nuxt build",
    "build:server": "webpack --config server/webpack.config.babel.js",
    "start": "cross-env NODE_ENV=production node dist/server-app.js",
    "start:pm2": "pm2 start yarn --name=hare -- start",
    "analyze": "nuxt build --analyze",
    "generate": "nuxt generate",
    "precommit": "lint-staged",
    "heroku-postbuild": "yarn build",
    "prepublishOnly": "yarn lint && yarn test && yarn build:server",
    "release": "standard-version"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "lint-staged": {
    "{client,server,test}/**/*.{js,vue}": [
      "eslint --ext .js,.vue --ignore-path .gitignore"
    ]
  },
  "dependencies": {
    "axios": "^0.17.1",
    "bunyan": "^1.8.12",
    "chart.js": "^2.7.1",
    "cross-env": "^5.1.3",
    "element-ui": "^2.0.9",
    "js-cookie": "^2.2.0",
    "js-yaml": "^3.9.1",
    "jwt-decode": "^2.2.0",
    "koa": "^2.4.1",
    "koa-body": "^2.3.0",
    "koa-bunyan": "^1.0.1",
    "koa-bunyan-logger": "^2.0.0",
    "koa-compose": "^4.0.0",
    "koa-compress": "^2.0.0",
    "koa-connect": "^2.0.0",
    "koa-proxies": "^0.6.2",
    "koa-router": "^7.3.0",
    "koa-session": "^5.5.1",
    "mkdirp": "^0.5.1",
    "moment": "^2.20.0",
    "negotiator": "^0.6.1",
    "normalize.css": "^7.0.0",
    "nuxt": "^1.1.1",
    "svg-captcha": "^1.3.11",
    "vue-chartjs": "^3.0.2",
    "vue-class-component": "^6.1.2",
    "vue-clipboards": "^1.2.1",
    "vue-i18n": "^7.3.3",
    "vuex-class": "^0.3.0",
    "xmlify": "^1.1.0"
  },
  "devDependencies": {
    "@nuxtjs/webpackmonitor": "^0.1.0",
    "ava": "^0.23.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "eslint": "^4.14.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-html": "^4.0.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "lint-staged": "^5.0.0",
    "moxios": "^0.4.0",
    "node-sass": "^4.7.2",
    "nodemon": "^1.14.7",
    "progress-bar-webpack-plugin": "^1.10.0",
    "sass-loader": "^6.0.6",
    "standard-version": "^4.2.0",
    "uglifyjs-webpack-plugin": "^1.1.4",
    "webpack": "^3.10.0",
    "webpack-node-externals": "^1.6.0"
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0"
  }
}
