{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Hare Dev",
        "type": "node",
        "request": "launch",
        "protocol": "inspector",
        "program": "${workspaceRoot}/server/app",
        "stopOnEntry": false,
        "sourceMaps": true,
        "env": {
            "NODE_ENV": "development",
            "DEBUG": "nuxt:*,koa:*",
            "SHOW_EXAMPLES": "true"
        }
      },
      {
        "name": "Test Cases",
        "type": "node",
        "request": "launch",
        "protocol": "inspector",
        "program": "${workspaceRoot}/node_modules/ava/profile.js",
        "stopOnEntry": false,
        "args": [
          "test/index.test.js"
        ],
        "cwd": "${workspaceRoot}",
        "sourceMaps": true,
        "env": {
            "NODE_ENV": "production",
            "DEBUG": "nuxt:*"
        }
      },
      {
        "name": "Hare Prod",
        "type": "node",
        "request": "launch",
        "protocol": "inspector",
        "program": "${workspaceRoot}/dist/server/app",
        "env": {
            "NODE_ENV": "production",
            "DEBUG": "nuxt:*,koa:*",
            "LB_ADDR": "http://example.private.local:8080"
        }
      }
    ]
}
