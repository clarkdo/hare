{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Hare Dev",
        "type": "node",
        "request": "launch",
        "protocol": "inspector",
        "program": "${workspaceRoot}/server/app.js",
        "stopOnEntry": false,
        "args": [],
        "cwd": "${workspaceRoot}",
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/babel-node",
        "runtimeArgs": [
          "--nolazy"
        ],
        "sourceMaps": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "env": {
            "NODE_ENV": "development",
            "DEBUG": "nuxt:*,app"
        }
      },
      {
        "name": "Run Test Cases",
        "type": "node",
        "request": "launch",
        "protocol": "inspector",
        "program": "${workspaceRoot}/node_modules/ava/profile.js",
        "stopOnEntry": false,
        "args": [
          "test/index.test.js"
        ],
        "cwd": "${workspaceRoot}",
        "sourceMaps": true,
        "env": {
            "NODE_ENV": "production",
            "DEBUG": "nuxt:*,app"
        }
      },
      {
        "name": "Debug Hare Prod",
        "type": "node",
        "request": "launch",
        "protocol": "inspector",
        "program": "${workspaceRoot}/dist/server-app",
        "env": {
            "NODE_ENV": "production",
            "DEBUG": "nuxt:*"
        }
      }
    ]
}
